<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    tools:context="com.webrdaniel.collectmydata.activities.NewDataCollActivity">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_data_coll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="5"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_new_data_coll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/til_new_data_coll"
            android:layout_alignTop="@+id/fab_main_activity"
            android:ems="16"
            android:hint="@string/name_of_data_collection"
            android:inputType="textPersonName|textCapSentences"
            android:maxLength="16" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_new_data_coll"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="top"
        android:layout_marginTop="12dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_done_white_24dp" />

</LinearLayout>
